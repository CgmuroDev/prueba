<odoo>
    <data>
        <record id="purchase_request_funding_source_tree" model="ir.ui.view">
            <field name="name">purchase.request.funding.source.tree</field>
            <field name="model">purchase.request.funding.source</field>
            <field name="arch" type="xml">
                <tree string="Fuentes de Financiamiento">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="purchase_request_funding_source_form" model="ir.ui.view">
            <field name="name">purchase.request.funding.source.form</field>
            <field name="model">purchase.request.funding.source</field>
            <field name="arch" type="xml">
                <form string="Fuente de Financiamiento">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="company_id" options="{'no_create': True}"/>
                                <field name="sequence"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Descripción">
                                <field name="description" placeholder="Descripción detallada de la fuente"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="purchase_request_funding_source_search" model="ir.ui.view">
            <field name="name">purchase.request.funding.source.search</field>
            <field name="model">purchase.request.funding.source</field>
            <field name="arch" type="xml">
                <search string="Fuentes de Financiamiento">
                    <field name="name"/>
                    <field name="code"/>
                    <filter name="inactive" string="Archivadas" domain="[('active', '=', False)]"/>
                    <separator/>
                    <group expand="0" string="Agrupar por">
                        <filter name="group_company" string="Compañía" context="{'group_by': 'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="purchase_request_funding_source_action" model="ir.actions.act_window">
            <field name="name">Fuentes de Financiamiento</field>
            <field name="res_model">purchase.request.funding.source</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="purchase_request_funding_source_search"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Configura las fuentes de financiamiento disponibles para tus solicitudes.
                </p>
                <p>
                    Crea tantas fuentes como necesites para segmentar tus presupuestos por compañía.
                </p>
            </field>
        </record>

        <menuitem id="purchase_request_funding_source_menu_config"
                  name="Configuración"
                  parent="purchase_request.purchase_request_menu_root"
                  sequence="80"
                  groups="purchase_request.group_purchase_request_manager"/>

        <menuitem id="purchase_request_funding_source_menu"
                  name="Fuentes de Financiamiento"
                  parent="purchase_request_funding_source_menu_config"
                  action="purchase_request_funding_source_action"
                  sequence="10"
                  groups="purchase_request.group_purchase_request_manager"/>
    </data>
</odoo>
