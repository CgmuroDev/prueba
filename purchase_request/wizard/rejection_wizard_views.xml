<odoo>
    <data>
        <record id="purchase_request_rejection_wizard_form_view" model="ir.ui.view">
            <field name="name">purchase.request.rejection.wizard.form</field>
            <field name="model">purchase.request.rejection.wizard</field>
            <field name="arch" type="xml">
                <form string="Motivo del Rechazo">
                    <group>
                        <field name="rejection_reason"/>
                    </group>
                    <footer>
                        <button name="action_confirm_rejection" string="Confirmar Rechazo" type="object" class="btn-danger"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>